{
  "name": "hardhat-ts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "deploy:goerli": "hardhat run --network goerli scripts/deploy.ts",
    "deploy:localhost": "hardhat run --network localhost scripts/deploy.ts",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "hardhat": "hardhat",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "node": "hardhat node",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "test": "hardhat test"
  },
  "dependencies": {
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.4",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chai": "^4.3.6",
    "eslint": "^8.22.0",
    "eslint-config-custom": "workspace:*",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.2",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "typechain": "^8.1.0",
    "typescript": "^4.9.3"
  }
}
